        Width="520" Height="170" CanResize="False" WindowStartupLocation="CenterOwner"
        Title="Start-URL festlegen">
  <StackPanel Margin="16" Spacing="8">
    <TextBlock Text="Bitte geben Sie die Start-URL fÃ¼r Apache Guacamole ein:"/>
    <TextBox x:Name="Input" Watermark="https://remote.example.com/guacamole/" />
